<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_expressao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="40sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:singleLine="true"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_resultado"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="30sp"
        android:gravity="end"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:maxLines="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_limpar"
            style="@style/Operators_Button"
            android:text="C"
            android:layout_weight="3"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_divisao"
            style="@style/Operators_Button"
            android:text="/"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_sete"
            style="@style/Numbers_Button"
            android:text="7"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_oito"
            style="@style/Numbers_Button"
            android:text="8"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_nove"
            style="@style/Numbers_Button"
            android:text="9"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_multiplicacao"
            style="@style/Operators_Button"
            android:text="*"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_quatro"
            style="@style/Numbers_Button"
            android:text="4"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_cinco"
            style="@style/Numbers_Button"
            android:text="5"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_seis"
            style="@style/Numbers_Button"
            android:text="6"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_subtracao"
            style="@style/Operators_Button"
            android:text="-"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_um"
            style="@style/Numbers_Button"
            android:text="1"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_dois"
            style="@style/Numbers_Button"
            android:text="2"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_tres"
            style="@style/Numbers_Button"
            android:text="3"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_adicao"
            style="@style/Operators_Button"
            android:text="+"
            android:layout_margin="1dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="1dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_ponto"
            style="@style/Numbers_Button"
            android:text="."
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_numero_zero"
            style="@style/Numbers_Button"
            android:text="0"
            android:layout_margin="1dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bt_apagar"
            style="@style/Numbers_Button"
            android:src="@drawable/backspace"
            android:scaleType="center"
            android:layout_margin="1dp"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_igual"
            style="@style/Operators_Button"
            android:text="="
            android:layout_margin="1dp"/>

    </LinearLayout>

</LinearLayout>